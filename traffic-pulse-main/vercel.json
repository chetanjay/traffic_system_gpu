{
  "version": 2,
  "builds": [
    {
      "src": "traffic-pulse-main/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "traffic-pulse-main/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://api.yourdomain.com/api/$1" },
    { "src": "/socket.io/(.*)", "dest": "https://api.yourdomain.com/socket.io/$1" },
    { "src": "/(.*)", "dest": "/traffic-pulse-main/index.html" }
  ]
}
